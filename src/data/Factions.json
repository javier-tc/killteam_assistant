    "Abilities": [
      {
        "THROAT SLITTAS": "This operative (excluding BOMB SQUIG operatives) can perform a Charge action while it has a Conceal order."
      }
    ],
    "Strategic_Ploys": [
      {
        "SSSSHHHH!": {
          "cost": "1CP",
          "description": "Friendly KOMMANDO operatives that are not within Line of Sight of enemy operatives, or have a Conceal order and are more than ⬟[6] from enemy operatives, can immediately perform a free Dash action. You can only use this Strategic Ploy once."
        }
      },
      {
        "DAKKA! DAKKA! DAKKA!": {
          "cost": "1CP",
          "description": "Until the end of the Turning Point, each time a friendly KOMMANDO operative makes a shooting attack, in the Roll Attack Dice step of that shooting attack, if you retain any critical hits, you can select one of your failed hits to be retained as a successful normal hit."
        }
      },
      {
        "WAAAGH!": {
          "cost": "1CP",
          "description": "Until the end of the Turning Point, each time a friendly KOMMANDO operative fights in combat, in the Roll Attack Dice step of that combat, when you would retain two or more normal hits, you can select one of those hits to be retained as a critical hit instead."
        }
      },
      {
        "SKULK ABOUT": {
          "cost":"1CP",
          "description":"Until the end of the Turning Point, each time a shooting attack is made against a friendly KOMMANDO operative, before rolling defence dice for that shooting attack, if it has a Conceal order, you can retain one as a successful normal save without rolling it, regardless of any rules that treat the operative as having an Engage order (e.g. Vantage Point)."
      }
    }
    ],
    "Tactical_Ploys": [
      {
        "JUST A SCRATCH": {
          "cost": "1CP",
          "description": "Use this Tactical Ploy in the Resolve Successful Hits step of a shooting attack or combat, when damage would be inflicted on a friendly KOMMANDO operative (excluding BOMB SQUIG operatives) from a normal hit. Ignore the damage inflicted from that attack dice."
        }
      },
      {
        "KRUMP 'EM": {
          "cost": "1CP",
          "description": "Use this Tactical Ploy at the end of the Firefight phase. Select one friendly KOMMANDO operative. It can perform a free Fight action."
        }
      },
      {
        "SNEAKY GIT": {
          "cost": "1CP",
          "description": "Use this Tactical Ploy in the Set Up Operatives step of the mission sequence. Select one friendly KOMMANDO operative (excluding BOMB SQUIG operatives). That operative can be set up with a Conceal order anywhere on the battlefield that is within ▲[1] of Heavy terrain and more than ⬟[6] from enemy operatives and the enemy drop zone. You can only use it once per battle, and that operative cannot have its order changed in the first Turning Point (i.e. from the Infiltrate scouting option)."
        }
      }
    ]
